<h1>Listing ratings</h1>

<table>
  <tr>
    <th>Rate</th>
    <th>Venue</th>
    <th>User</th>
    <th>Comments</th>
    <th>Meal</th>
    <th>Posted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%= rating.rate %></td>
    <td><%= rating.venue %></td>
    <td><%= rating.user %></td>
    <td><%= rating.comments %></td>
    <td><%= rating.meal %></td>
    <td><%= rating.posted %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

